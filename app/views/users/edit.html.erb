<% provide(:title, "Edit user") %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1>Update your profile</h1>

			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>

				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control input-lg' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control input-lg' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control input-lg' %>

				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation, class: "form-control input-lg" %>

				<br>

				<div class="gravatar_edit">
				<%= gravatar_for @user %>
				<a href="http://gravatar.com/emails" target="blank">change</a>
			  </div>

			  <br>

				<%= f.submit "Save changes", class: "btn btn-primary btn-lg btn-block" %>
			<% end %>

			

		</div>
	</div>
</div>