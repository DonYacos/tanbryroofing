<% provide(:title, "Sign Up") %>
<% provide(:body_id, "signup") %>
<div class="container">
	<div class="row">	  
		<div class="col-md-6 col-md-offset-3">

			<h1>Sign Up</h1>

			<%= form_for @user do |f| %>

				<%= render 'shared/error_messages' %>

				<div class="form-group">
					<%= f.label :name %>
			  	<%= f.text_field :name, class: "form-control input-lg" %>
				</div>

				<div class="form-group">
					<%= f.label :email %>
			  	<%= f.email_field :email, class: "form-control input-lg" %>
				</div>

				<div class="form-group">
					<%= f.label :password %>
			  	<%= f.password_field :password, class: "form-control input-lg" %>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, "Confirmation" %>
			  	<%= f.password_field :password_confirmation, class: "form-control input-lg" %>
				</div>
				<br>

			  <div class="form-group"><%= f.submit "Create my account", class: "btn btn-primary btn-lg btn-block" %>
			  </div>
			  
			<% end %>
		</div>
	</div>
</div>


