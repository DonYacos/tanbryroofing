<h1>Listing estimates</h1>

<table>
  <thead>
    <tr>
      <th>Estimate date</th>
      <th>Expiration date</th>
      <th>Total</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.estimate_date %></td>
        <td><%= estimate.expiration_date %></td>
        <td><%= estimate.total %></td>
        <td><%= estimate.quantity %></td>
        <td><%= estimate.amount %></td>
        <td><%= link_to 'Show', estimate %></td>
        <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
        <td><%= link_to 'Destroy', estimate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

