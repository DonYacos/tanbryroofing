    <![endif]-->
</head>

<body <%= body_id(yield(:body_id)) %>>
 <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      
      <ul class="nav navbar-nav navbar-collapse collapse">
        <li class="<%= is_active('index') %>"><a href="/">Home</a></li>
        <li class="<%= is_active('about') %>"><%= link_to "About Us", "/pages/about" %></li>
        <li class="<%= is_active('commercial') %>"><%= link_to "Commercial", "/pages/commercial" %></li>
        <li class="<%= is_active('residential') %>"><%= link_to "Residential", "/pages/residential" %></li>
        <li class="<%= is_active('new') %>"><%= link_to "Contact", "/contact" %></li>
        <li class="<%= is_active('help') %>"><a id="btn-open" href="#">Help</a></li>
      </ul>
    </div>


    <div class="navbar-collapse collapse">
      <nav>
        <ul class="nav navbar-nav navbar-right">

          <% if logged_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>

        </ul>
      </nav>
    </div><!--/.navbar-collapse -->
  </div>
</div>

<!-- App Header -->
<div class="app_header">
  <div class="container">
    <div class="row">

      <div class="col-md-4">
        <div class="logo img-responsive pull-left">
          <%= link_to image_tag("bryce-logo-larger.png", :class => "img-responsive", :Id => "logo"), root_path %>
        </div>
      </div>
      
      <div class="col-md-offset-4 col-md-4">
        <div class="call-action img-responsive">           
          <%= link_to "GET A FREE ESTIMATE", "/leads/new", :id => "get-estimate-button", :class => "btn btn-primary btn-lg btn-block img-responsive"%>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Flash --> 
<div class="container">
  <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
  <% end %>
</div>   


<%= yield %>

<!-- footer -->
<div id="footer">
  <div class="container">
    <div class="page-header"></div>
    <div class="row">

      <div class="col-md-3">
        <div class="logo img-responsive">
          <%= link_to image_tag("bryce-logo_03.png", :class => "img-responsive"), root_path %>
        </div>

        <ul class="footer-menu-under-logo">
          <li><h3><a id="footer-menu-under-logo" href="/contact"><span class="glyphicon glyphicon-envelope"></span> CONTACT US »</a><h3></li>

          <li><h3><a id="footer-menu-under-logo" href="/leads/new"><span class="glyphicon glyphicon-list-alt"></span>  GET A FREE ESTIMATE »</a><h3></li>

          <li><h3><a id="footer-menu-under-logo" href="/contact"><span class="glyphicon glyphicon-map-marker"></span> OUR<br> LOCATIONS »</a><h3></li>
        </ul>

        <!-- <address>          
          1741 Tomkins Rd<br>
          Boyne City, MI 49712<br>
          <abbr title="Phone:">P:</abbr> (231) 237-4043
        </address> -->
      </div>

      <div class="col-md-offset-3 col-md-6 pull-right">
        <h3 id="phone" class="pull-right"><a onclick="goog_report_conversion('tel:770-904-9320')" href="tel://1-770-904-9320"><span class="glyphicon glyphicon-earphone"></span>  Call Us at (770) 904-9320</a></h3>
      </div>      
      
    </div>
    
    
    <p class="text-muted" style="text-align: center;">Copyright © Bryce Companies 2017. All rights reserved. </p>
  </div>
</div>



